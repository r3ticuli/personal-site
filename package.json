{
  "devDependencies": {
    "handlebars": "^4.7.7",
    "http-server": "^0.12.3",
    "nodemon": "^2.0.6",
    "sass": "^1.32.0"
  },
  "scripts": {
    "local": "nodemon --watch src -e scss,js,hbs,json",
    "start": "npm run build && http-server",
    "build": "node build.js && sass ./src/css/index.scss ./public/index.css && cp ./src/js/index.js ./public/index.js && cp -r ./src/assets ./public/assets"
  }
}
